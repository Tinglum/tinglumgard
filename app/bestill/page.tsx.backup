        {/* Progress Steps */}
        <div className="mb-12">
          <div className="flex items-center justify-center gap-4">
            {[1, 2, 3, 4].map((s) => (
              <div key={s} className="flex items-center gap-4">
                <div className={`relative flex items-center justify-center w-12 h-12 rounded-full font-bold transition-all duration-500 ${
                  step >= s
                    ? 'bg-gradient-to-br from-charcoal to-slate text-white shadow-xl scale-110'
                    : 'bg-white/60 backdrop-blur-xl text-slate/40 border border-slate/20'
                }`}>
                  {step > s ? <Check className="w-5 h-5" /> : s}
                </div>
                {s < 4 && (
                  <div className={`w-12 md:w-24 h-1 rounded-full transition-all duration-500 ${
                    step > s ? 'bg-gradient-to-r from-charcoal to-slate' : 'bg-slate/20'
                  }`} />
                )}
              </div>
            ))}
          </div>
          <div className="flex items-center justify-center gap-4 mt-4">
            <div className="text-center w-12 md:w-24">
              <p className="text-xs font-semibold text-charcoal">Størrelse</p>
            </div>
            <div className="w-12 md:w-24" />
            <div className="text-center w-12 md:w-24">
              <p className="text-xs font-semibold text-charcoal">Ribbe</p>
            </div>
            <div className="w-12 md:w-24" />
            <div className="text-center w-12 md:w-24">
              <p className="text-xs font-semibold text-charcoal">Ekstra</p>
            </div>
            <div className="w-12 md:w-24" />
            <div className="text-center w-12 md:w-24">
              <p className="text-xs font-semibold text-charcoal">Levering</p>
            </div>
          </div>
        </div>

        <div className="grid lg:grid-cols-3 gap-8">
          {/* Main Content */}
          <div className="lg:col-span-2 space-y-6">

            {/* Step 1: Box Size */}
            <div className={`relative bg-white/70 backdrop-blur-2xl rounded-3xl p-8 border border-white/80 shadow-2xl transition-all duration-500 ${
              step === 1 ? 'ring-2 ring-charcoal' : step > 1 ? 'opacity-60' : ''
            }`}>
              <div className="flex items-center justify-between mb-6">
                <h2 className="text-2xl font-bold text-charcoal">1. Velg kassestørrelse</h2>
                {boxSize && step > 1 && (
                  <button
                    onClick={() => setStep(1)}
                    className="text-sm text-slate hover:text-charcoal underline"
                  >
                    Endre
                  </button>
                )}
              </div>

              <div className="grid md:grid-cols-2 gap-4">
                {(['8', '12'] as const).map((size) => (
                  <button
                    key={size}
                    onClick={() => {
                      setBoxSize(size);
                      if (step === 1) setStep(2);
                    }}
                    className={`group relative p-6 rounded-2xl border-2 transition-all duration-300 ${
                      boxSize === size
                        ? 'border-charcoal bg-gradient-to-br from-charcoal/5 to-slate/5 shadow-xl scale-105'
                        : 'border-slate/20 hover:border-slate/40 hover:shadow-lg'
                    }`}
                  >
                    <div className="text-center mb-4">
                      <p className="text-5xl font-bold text-charcoal mb-2">{size} <span className="text-2xl text-slate/50">kg</span></p>
                      <p className="text-sm text-slate/70">{size === '8' ? '2-3 personer' : '4-6 personer'}</p>
                    </div>
                    <p className="text-2xl font-bold text-charcoal text-center">kr {prices[size].total}</p>

                    {boxSize === size && boxContents[size] && (
                      <div className="mt-6 pt-6 border-t border-slate/20 animate-in fade-in slide-in-from-top-2 duration-500">
                        <p className="text-xs font-bold text-charcoal uppercase tracking-wider mb-3">I kassen:</p>
                        <ul className="space-y-2">
                          {boxContents[size].map((item, idx) => (
                            <li key={idx} className={`flex items-start gap-2 text-sm ${item.highlight ? 'font-medium text-charcoal' : 'text-slate/70'}`}>
                              <Check className="w-4 h-4 flex-shrink-0 mt-0.5 text-green-600" />
                              <span>{item.name}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </button>
                ))}
              </div>

              {canProceedToStep2 && step === 1 && (
                <button
                  onClick={() => setStep(2)}
                  className="mt-6 w-full px-8 py-4 bg-gradient-to-r from-charcoal to-slate text-white rounded-2xl font-bold uppercase tracking-wider hover:shadow-2xl hover:scale-105 transition-all duration-300 flex items-center justify-center gap-2"
                >
                  Gå videre til ribbe-valg
                  <ChevronRight className="w-5 h-5" />
                </button>
              )}
            </div>

            {/* Step 2: Ribbe Choice */}
            {boxSize && (
              <div className={`relative bg-white/70 backdrop-blur-2xl rounded-3xl p-8 border border-white/80 shadow-2xl transition-all duration-500 animate-in slide-in-from-bottom-4 ${
                step === 2 ? 'ring-2 ring-charcoal' : step > 2 ? 'opacity-60' : step < 2 ? 'opacity-40 pointer-events-none' : ''
              }`}>
                <div className="flex items-center justify-between mb-6">
                  <h2 className="text-2xl font-bold text-charcoal">2. Velg ribbe-type</h2>
                  {ribbeChoice && step > 2 && (
                    <button
                      onClick={() => setStep(2)}
                      className="text-sm text-slate hover:text-charcoal underline"
                    >
                      Endre
                    </button>
                  )}
                </div>

                <p className="text-sm text-slate/70 mb-6">
                  Din kasse inneholder ca. {boxSize === '8' ? '2.0' : '3.0'} kg ribbe. Velg hvilken type:
                </p>

                <div className="grid gap-4">
                  {[
                    { id: 'tynnribbe', name: 'Tynnribbe', desc: 'Klassisk ribbe med ribbein - perfekt sprøstekt svor', tag: null },
                    { id: 'familieribbe', name: 'Familieribbe', desc: 'Inkluderer kotelettkam - mer kjøtt, mindre bein', tag: 'Mest kjøtt' },
                    { id: 'porchetta', name: 'Porchetta', desc: 'Beinfri nedre mage - italiensk stil', tag: null },
                    { id: 'butchers_choice', name: 'Slakterens valg', desc: 'Vi velger en god overraskelse basert på tilgjengelighet', tag: 'Anbefalt' },
                  ].map((option) => (
                    <button
                      key={option.id}
                      onClick={() => {
                        setRibbeChoice(option.id as typeof ribbeChoice);
                        if (step === 2) setStep(3);
                      }}
                      className={`relative text-left p-5 rounded-xl border-2 transition-all duration-300 ${
                        ribbeChoice === option.id
                          ? 'border-charcoal bg-gradient-to-br from-charcoal/5 to-slate/5 shadow-xl'
                          : 'border-slate/20 hover:border-slate/40 hover:shadow-lg'
                      }`}
                    >
                      {option.tag && (
                        <span className="absolute top-3 right-3 px-3 py-1 bg-charcoal text-white text-xs font-bold rounded-full">
                          {option.tag}
                        </span>
                      )}
                      <p className="font-bold text-charcoal mb-1">{option.name}</p>
                      <p className="text-sm text-slate/70">{option.desc}</p>
                    </button>
                  ))}
                </div>

                {canProceedToStep3 && step === 2 && (
                  <button
                    onClick={() => setStep(3)}
                    className="mt-6 w-full px-8 py-4 bg-gradient-to-r from-charcoal to-slate text-white rounded-2xl font-bold uppercase tracking-wider hover:shadow-2xl hover:scale-105 transition-all duration-300 flex items-center justify-center gap-2"
                  >
                    Gå videre til ekstra tillegg
                    <ChevronRight className="w-5 h-5" />
                  </button>
                )}
              </div>
            )}

            {/* Step 3: Extra Products */}
            {ribbeChoice && (
              <div className={`relative bg-white/70 backdrop-blur-2xl rounded-3xl p-8 border border-white/80 shadow-2xl transition-all duration-500 animate-in slide-in-from-bottom-4 ${
                step === 3 ? 'ring-2 ring-charcoal' : step > 3 ? 'opacity-60' : step < 3 ? 'opacity-40 pointer-events-none' : ''
              }`}>
